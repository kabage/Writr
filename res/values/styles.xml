<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- Custom Sherlock Actionbar theme. -->
    <style name="Theme.SherlockCustom" parent="@style/Theme.Sherlock.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyTheme.ActionBarStyle</item>
        <item name="actionBarStyle">@style/MyTheme.ActionBarStyle</item>
    </style>

    <style name="MyTheme.ActionBarStyle" parent="Widget.Sherlock.ActionBar">
        <item name="android:background">@drawable/gradient_action_bar</item>
        <item name="background">@drawable/gradient_action_bar</item>
        <item name="android:titleTextStyle">@style/Theme.SherlockCustom.ActionBar.TitleTextStyle</item>
        <item name="titleTextStyle">@style/Theme.SherlockCustom.ActionBar.TitleTextStyle</item>
    </style>

    <style name="Theme.SherlockCustom.ActionBar.TitleTextStyle" parent="TextAppearance.Sherlock.Widget.ActionBar.Title">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="CustomScrollView" parent="AppBaseTheme">
        <item name="android:scrollbarThumbVertical">@drawable/scroller_thumb</item>
    </style>

    <style name="CustomScrollViewWhite" parent="AppBaseTheme">
        <item name="android:scrollbarThumbVertical">@drawable/scroller_thumb_white</item>
    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:height">40dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:height">60dp</item>
        <item name="android:background">@drawable/spinner_selector</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>